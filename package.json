{
  "name": "front-end-tico-store",
  "version": "1.0.0",
  "description": "Tico's Store! An example React, GraphQL, Next and Apollo App",
  "main": "index.js",
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch",
    "test-win": "SET NODE_ENV=test&& jest --watch",
    "heroku-postbuild": "next build"
  },
  "author": "Tico Thepsourinthone",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-client": "^2.5.1",
    "babel-core": "^6.26.3",
    "babel-plugin-styled-components": "^1.10.0",
    "date-fns": "^1.30.1",
    "downshift": "^3.2.10",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "graphql": "^14.3.0",
    "graphql-tag": "^2.10.1",
    "lodash.debounce": "^4.0.8",
    "merge": "^1.2.1",
    "next": "^8.1.0",
    "next-with-apollo": "^3.4.0",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-adopt": "^0.6.0",
    "react-apollo": "^2.5.5",
    "react-dom": "^16.8.6",
    "react-stripe-checkout": "^2.6.3",
    "react-transition-group": "^4.0.1",
    "styled-components": "^4.2.0",
    "waait": "^1.0.4"
  },
  "devDependencies": {
    "babel-jest": "^24.8.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "casual": "^1.6.0",
    "enzyme-to-json": "^3.3.5",
    "graphql-tools": "^4.0.4",
    "jest": "^24.8.0",
    "jest-transform-graphql": "^2.1.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest",
      "^.+\\.js?$": "babel-jest"
    }
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ticotheps/front-end-tico-store.git"
  },
  "bugs": {
    "url": "https://github.com/ticotheps/front-end-tico-store/issues"
  },
  "homepage": "https://github.com/ticotheps/front-end-tico-store#readme"
}
